crds:
  keep: false

global:
  logging:
    format: json
    # -- Set the global logging level. One of: `debug`, `info`, `warn` or `error`
    level: {{ argoCDLoglevel }}

controller:
  replicas: {{ argoCDControllerReplicaCount }}

configs:
  cm:
    application.resourceTrackingMethod: {{ argoCDTrackingMethod }}
    controller.diff.server.side: "{{ argoCDEnableServerSideDiff }}"
    ignoreAggregatedRoles: {{ argoCDIgnoreAggregateRoles}}
    url: https://{{ argoCDURL }}
    accounts.vard0ni: apiKey, login
    accounts.vard0ni.enabled: "true" 

  params:
    server.insecure: true

  repositories:
    gapeev-repo:
      url: https://github.com/vard0ni/infra
      name: vard0ni
      type: git

## Redis
redis:
  enabled: true

## Server
server:
  name: server
  replicas: {{ argoCDServerReplicaCount }}
  certificate:
    enabled: true
    domain: "{{ argoCDURL }}"
    duration: "9125h"
    renewBefore: "360h"
    issuer:
      group: "cert-manager.io"
      kind: "ClusterIssuer"
      name: "dev-ca-issuer"
    privateKey:
      rotationPolicy: Always
      encoding: PKCS8
      algorithm: RSA
      size: 4096
    usages:
      - server auth
      - client auth

  ingress:
    enabled: true
    controller: generic
    annotations:
      cert-manager.io/cluster-issuer: "dev-ca-issuer"
      nginx.ingress.kubernetes.io/ssl-redirect: "false"
    ingressClassName: "system-ingress"
    hostname: "{{ argoCDURL }}"
    paths:
      - /
    pathType: Prefix
    tls: true
